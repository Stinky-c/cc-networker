{
    "$schema": "https://raw.githubusercontent.com/MCJack123/TypeScriptToLua/master/tsconfig-schema.json",
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "ESNext"
        ],
        "moduleResolution": "node",
        "strict": true,
        "types": [
            "@typescript-to-lua/language-extensions",
            "@jackmacwindows/lua-types/cc",
            "@jackmacwindows/craftos-types",
            "@jackmacwindows/cc-types",
            "@buckydev/basalt-types"
        ],
        "outDir": "dist/",
        "sourceMap": false,
        "sourceRoot": "src/",
        "inlineSourceMap": true,
        "baseUrl": "./",
    },
    "tstl": {
        "luaTarget": "CC",
        "luaLibImport": "require",
        "sourceMapTraceback": true,
        "noImplicitSelf": false,
        "noResolvePaths": [
            "lib.basalt",
            "@buckydev/basalt-types"
        ],
        "luaBundle": "tmp/",
        "luaBundleEntry": "src/main.ts"
    },
    "include": [
        "src/*.ts",
        "src/lib/*.ts",
    ]
}